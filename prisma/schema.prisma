// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Playlist {
  id          Int     @id @default(autoincrement())
  name        String?
  description String?
  movies      Movie[]
}

model Movie {
  id        Int        @id
  playlists Playlist[]
}
